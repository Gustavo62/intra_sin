<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>
  <div class="field">
    <%= f.label :nome %><br />
    <%= f.text_field :nome, autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :cpf %><br />
    <span id="cpfResponse"></span>
    <%= f.text_field :cpf, id:"cpf", type:"text", maxlength:"18"%>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true%>
  </div>

  <div class="field">
    <%= f.label :dica_para_senha %><br />
    <%= f.text_field :lembrete, autofocus: true%>
  </div>



  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>
  
  <div class="field">
    <label>Senha</label> <br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characteres no m√≠nimo</em>
    <% end %>
  </div>

  <div class="field">
    <label>Confirmar Senha</label> <br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <label>Senha Atual</label><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %> 