<%= javascript_pack_tag "validacao", "data-turbolinks-track" => true %>
<div class="top-nav" id="top-nav" style="margin-left: -16px;margin-right: -16px;">  
	<h5 style="color: white;font-size: larger;padding-top: 10px;margin: auto;background: #ea663e;text-align: center;height: 44px;"><b>SINOREDI-CE</b> | Intranet</h5>
</div>
<div class="container" style="padding-top:50%">
	<h2></h2> 
	<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
		<div class="mb-3">
			<label for="exampleInputEmail1" class="form-label">Numero do CPF</label>
			<%= icon("person", class: "icone-login-user") %> 
			<%= f.text_field :cpf, autofocus: true,class:"form-control", id:"user_cpf", type:"text", maxlength:"13", style:"padding: 0.375rem 1.75rem;", placeholder:"Cpf"%>
			<div id="cpfHelp" class="form-text">Informe o numero de <b>CPF</b> utilizado no cadastro</div>
		</div> 
		<div class="mb-3">
			<label for="exampleInputPassword1" class="form-label">Senha</label> 
			<%= icon("key", class: "icone-login-key") %>
			<%= f.password_field :password, autocomplete: false,class:"form-control", style:"padding: 0.375rem 1.75rem;",placeholder:"Senha" %>
		</div>  
		<%= f.submit "ENTRAR",class:"btn btn-primary" %> 
	<% end %> 
	<%= render "users/shared/links" %>
</div>
<style> 
.mb-3 .icone-login-key{
  position:absolute;
}
.icone-login-key { 
  color: rgb(255, 96, 0);
  margin-top: 43px;
  margin-left: -44px;
  z-index: 9;
}
.mb-3 .icone-login-user{
  position:absolute;
}
.icone-login-user { 
  color: rgb(255, 96, 0);
  margin-top: 43px;
  margin-left: -115px;
  z-index: 9;
}
</style>