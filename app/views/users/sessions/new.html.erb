<%= javascript_pack_tag "validacao", "data-turbolinks-track" => true %>

<div class="container" style="padding-top:20%">
	<h2></h2> 
	<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
		<div class="mb-3">
			<label class="form-label">Numero do CPF</label>
			<%= icon("person", class: "icone-login-user") %> 
			<%= f.text_field :cpf, autofocus: true,class:"form-control", id:"user_cpf", type:"text", maxlength:"14", style:"padding: 0.375rem 1.75rem;", placeholder:"Cpf"%>
			<div id="cpfHelp" class="form-text">Informe o numero de <b>CPF</b> utilizado no cadastro</div>
		</div> 
		<div class="mb-3">
			<label class="form-label">Cartório</label> 
			<%= f.select "serventia",options_from_collection_for_select(@cartorios, "cod_tj", "nome"), {:prompt => ""}%>
			<div class="form-text">Informe o numero de <b>CPF</b> utilizado no cadastro</div>
		</div> 
		<div class="mb-3">
			<label for="exampleInputPassword1" class="form-label">Senha</label> 
			<%= icon("key", class: "icone-login-key") %>
			<%= f.password_field :password, autocomplete: false,class:"form-control", style:"padding: 0.375rem 1.75rem;",placeholder:"Senha" %>
		</div>  
		<%= f.submit "ENTRAR",class:"btn btn-primary" %> 
	<% end %> 
	<%= render "users/shared/links" %>
	<% flash.each do |name, msg| %> 
		<% name = 'warning' if name == 'alert'%>
		<% name = 'info' if name == 'notice'%>
		<div data-notify="container" class="col-11 col-sm-4 alert alert-<%= name %> alert-with-icon" role="alert" data-notify-position="top-right" style="display: inline-block; margin: 0px auto; position: fixed; transition: all 0.5s ease-in-out 0s; z-index: 0;bottom: 15px;right: 16px;">
		<button type="button" class="close" data-dismiss="alert" aria-label="Close" style="background: white;padding-left: 4px;border-radius: 14px;margin: 0px;padding-right: 5px;padding-top: 1px;">
			<span aria-hidden="true">&times;</span>
		</button>
		<span data-notify="icon" class="nc-icon nc-app"></span> 
		<% if name == 'info' %>   
			<span data-notify="title">Informação:</span>
		<% elsif name == 'success'%>
			<span data-notify="title">Sucesso:</span> 
		<% elsif name == 'danger'%>
			<span data-notify="title">Perigo:</span>  
		<% elsif name == 'warning'%> 
			<span data-notify="title">Aviso:</span>
		<% end %>
		<span data-notify="message"><%=sanitize(msg)%></span>
		<a href="#" target="_blank" data-notify="url"></a>
		</div>
	<% end %>
</div>
<style> 
#user_serventia{
	width: 100%;
}
.mb-3 .icone-login-key{
  position:absolute;
}
.icone-login-key { 
  color: rgb(255, 96, 0);
  margin-top: 43px;
  margin-left: -44px;
  z-index: 9;
}
.mb-3 .icone-login-user{
  position:absolute;
}
.icone-login-user { 
  color: rgb(255, 96, 0);
  margin-top: 43px;
  margin-left: -115px;
  z-index: 9;
}
</style> 
