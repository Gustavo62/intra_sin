<p id="notice"><%= notice %></p>

<h1>Intranet Avisos</h1>

<table>
  <thead>
    <tr>
      <th>Descricao</th>
      <th>Atividade</th>
      <th>Ativo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @intranet_avisos.each do |intranet_aviso| %>
      <tr>
        <td><%= intranet_aviso.descricao %></td>
        <td><%= @atividades.try(id: intranet_aviso.atividade_id).try(descricao) if @atividades.size != 0 %></td> 
        <td><%= check_box_tag 'Ativo','yes',intranet_aviso.ativo, onclick:"return false;" %></td>
        <td><%= link_to 'Show', intranet_aviso %></td>
        <td><%= link_to 'Edit', edit_intranet_aviso_path(intranet_aviso) %></td>
        <td><%= link_to 'Destroy', intranet_aviso, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Intranet Aviso', new_intranet_aviso_path %>
